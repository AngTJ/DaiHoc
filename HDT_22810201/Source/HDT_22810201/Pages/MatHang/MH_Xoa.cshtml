@page "/mat-hang/xoa"
@model HDT_22810201.Pages.MH_XoaModel

@if (string.IsNullOrEmpty(HttpContext.Session.GetString("username"))) Response.Redirect("/tai-khoan/dang-nhap");
else
{
	<title>Cửa hàng M: Mặt hàng - Xóa</title>
	<div class="dv xoa-div">
		<form method="post">
			<h1 style="font-size:24px;">Xóa sản phẩm</h1>
			@if (Model.SanPham is not null)
			{
				<input asp-for="Ma" value="@Model.Ma" readonly="" hidden="">
				<h2 style="font-size:16px;">Bạn có <u style="font-weight: bold;">CHẮC CHẮN</u> xóa không?</h2>
				<label>
					Mã<br>
					<input value="@Model.SanPham.Ma" readonly="">
				</label> <br>
				<label>
					Tên<br>
					<input value="@Model.SanPham.Ten" readonly="">
				</label> <br>
				<label>
					Loại<br>
					<input value="@Model.SanPham.Loai" readonly="">
				</label> <br>
				<label>
					Công ty<br>
					<input value="@Model.SanPham.CongTy" readonly="">
				</label> <br>
				<label>
					Tổng số lượng<br>
					<input value="@Model.TongLuongTien.Key" readonly="">
				</label> <br>
				<label>
					Tổng tiền<br>
					<input value="@Model.TongLuongTien.Value" readonly="">
					đồng
				</label> <br> <br>
				<input type="submit" value="Xóa">
			}
			else
			{
				<h3 style="font-size:16px;">Sản phẩm không tồn tại.</h3>
			}
			@if (Model.Memento is null)
			{
				<a asp-page="/MatHang/MH_DanhSach" asp-route-trang="@Model.Trang">Quay lại</a>
			}
			else
			{
				<a asp-page="/MatHang/MH_Tim_DanhSach" asp-route-memento="@Model.Memento" asp-route-trang="@Model.Trang">Quay lại</a>
			}
			<div style="color: red;">@Model.BaoLoi</div>
		</form>
	</div>
}